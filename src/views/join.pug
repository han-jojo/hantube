extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="이름", name="name", type="text", required)
        input(placeholder="E-Mail", name="email", type="email", required)
        input(placeholder="ID", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(placeholder="비밀번호 확인", name="password2", type="password", required)
        input(placeholder="사는 곳", name="location", type="text", required)
        input(type="submit", value="회원가입")
        include partials/social-login
    div.auth-switch
        span 이미 회원이신가요? 
        a(href="/login")  로그인하기 &rarr;