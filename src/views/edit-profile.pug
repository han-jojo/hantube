extends base

block content
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") 프로필 사진
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="이름", name="name", type="text", required, value=loggedInUser.name)
        input(placeholder="E-Mail", name="email", type="email", required, value=loggedInUser.email)
        input(placeholder="ID", name="username", type="text", required, value=loggedInUser.username)
        input(placeholder="사는 곳", name="location", type="text", required, value=loggedInUser.location)
        input(type="submit", value="회원정보 변경")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") 비밀번호 변경 &rarr;